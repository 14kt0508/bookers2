<div class="container">
	<div class="row">
		<div class="col-xs-3">
			<div class="row">

				<h2>User info</h2>
				<%= render 'users/profile', user: current_user %>
			</div>
		<!--メモ　右側の指定に注意。そこを間違えるとエラーが発生して表示されない -->
			<div class="row">
				<h2>New book</h2>
				<%= render 'books/newform', book: @book %>
			</div>

		</div>

		<div class="col-xs-9">
			<h2>Books</h2>
		<!--books一覧 -->
			<table class="table table-hover table-inverse">
				<thead>
					<tr>
						<th></th>
						<th>Title</th>
						<th>Opinion</th>
						<th colspan="3"></th>
					</tr>
				</thead>

				<tbody>
					<% @books.each do |book| %>
					<tr>
						<td>
							<%= link_to(book.user) do %>
							<%= attachment_image_tag(book.user, :profile_image, :fill, 50, 50, fallback: "no_image.jpg", size: '100x100') %>
							<% end %>
						</td>
						<td><%= link_to book.title, book, class: "book_#{book.id}" %></td>
						<td><%= book.body %></td>
							<td>
      							<% if book.favorited_by?(current_user) %>
      								<%= link_to book_favorites_path(book), method: :delete do %>
      									<i class="glyphicon glyphicon-heart" aria-hidden="true" style="color: red;"></i>
      									<%= book.favorites.count %> いいね
      								<% end %>
      								<% book.favorites.each do |favorite| %>
      									<%= link_to user_path(favorite.user) do %>
      										<%= attachment_image_tag favorite.user, :profile_image, size:'50x50', format: 'jpeg', class: "profile-img", fallback: "no_image.jpg" %>
     						 			<% end %>
      								<% end %>
     	 						<% else %>
      								<%= link_to book_favorites_path(book), method: :post do %>
      									<i class="glyphicon glyphicon-heart" aria-hidden="true"></i>
      									<%= book.favorites.count %> いいね
      								<% end %>
    			  				<% end %>
   			 				</<td>

					</tr>
					<% end %>
				</tbody>
			</table>

		<!--books一覧 -->


		</div>
	</div>
</div>