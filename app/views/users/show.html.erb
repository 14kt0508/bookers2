<div class="container">
  <div class="row">
    <div class="col-xs-3">
      <p id="notice"><%=  notice %></p><!-- サクセスメッセージを出す -->
      <div class="row">
        <h2>User info</h2>
          <%= render 'profile', user: current_user %>
      </div>
    <!--同コントローラーのviewで表示ならusersは省略可 -->
      <div class="row">
        <h2>New book</h2>
        <%= render 'books/newform', book: @book %>
      </div>
    </div>

    <div class="col-xs-9">

      <h2>Books</h2>
    <!--books一覧 -->
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @books.each do |book| %>
            <tr>
              <td>
                <%= link_to (book.user) do %>
            <!-- プロフィール画像   -->
                  <%= attachment_image_tag(book.user, :profile_image, :fill, 50, 50, fallback: "no_image.jpg", size: '100x100') %>
                <% end %>
              </td>
              <td><%= link_to book.title,book, class: "book_#{book.id}" %></td>
              <td><%= book.body %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    <!--books一覧 -->
    </div>
  </div>
</div>